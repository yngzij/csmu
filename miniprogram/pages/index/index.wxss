.example {
  border-radius: 5rpx;
  margin-top: 25rpx;
  display: block;
  width: 100%;
  height: 80rpx;
  background-color: white;
  line-height: 100rpx;
}

.marquee_box {
  width: 100%;
  position: relative;
}

.marquee_text {
  font-size: 2%;
  white-space: nowrap;
  position: absolute;
  top: 0;
  display: flex;
  flex-direction: row;
}

